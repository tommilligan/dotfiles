[include]
path = .gitconfig-user

[push]
default = simple

[alias]
# Show a pretty graph. Add --all to see all tags
review = log --oneline --graph --decorate

# Rebase the brach onto its common ancestor with master
squash = "!squash() { local common_ancestor=$1; git rebase -i $(git merge-base HEAD $common_ancestor); }; squash"

# Delete a branch both locally and on origin
purge = "!purge() { local branch_name=\"$1\"; echo \"> deleting branches merged into $branch_name\" && git branch --list --merged \"$branch_name\" | rg -v \" ${branch_name}$\" | xargs --no-run-if-empty git branch -d; }; purge"
  remote-purge = "!remote_purge() { local remote_name=\"$1\"; local branch_name=\"$2\"; echo \"> $remote_name: fetch\" && git fetch \"$remote_name\" && echo \"> $remote_name: prune\" && git remote prune \"$remote_name\" && echo \"> $1: deleting branches merged into $remote_name/$branch_name\" && git branch --list --remote --merged \"$remote_name/$branch_name\" | rg \".*\\b${1}/(\\S+)\\b.*\" -r '$1' | rg -v \"^(${branch_name}|master|main|staging|HEAD)$\" | xargs --no-run-if-empty git push \"$remote_name\" --delete; }; remote_purge"

# See how the current branch differs from common ancestor
# If this is empty, the branch has probably been merged with master
diverge = "!diverge() { local branch_name=$1; shift; git diff $branch_name...HEAD $@; }; diverge"

# Push a branch to origin and set the upstream tracking branch as the same name
post = "!post() { git push -u origin \"$(git rev-parse --abbrev-ref HEAD)\"; }; post"

[commit]
gpgsign = true

[core]
excludesfile = ~/.gitignore_global

[color "diff"]
commit = green
meta = yellow
frag = cyan
old = red
new = green
whitespace = red reverse

# Add diff-highlight. For this to work, diff-highlight must be in your path.
# You might like to set a symlink, e.g.
# sudo ln -s /usr/share/doc/git/contrib/diff-highlight/diff-highlight /usr/local/bin/diff-highlight
[pager]
diff = diff-highlight | less

[color "diff-highlight"]
oldNormal = red
oldHighlight = red bold 52
newNormal = green
newHighlight = green bold 22
