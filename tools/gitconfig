[include]
	path = .gitconfig-user

[push]
	default = simple

[alias]
	review = log --oneline --graph --decorate
	squash = !git rebase -i $(git merge-base HEAD master)
	purge = "!f() { echo \"> Purging $1\"; git push --delete origin \"$1\"; git branch -D \"$1\"; }; for tag in \"$@\"; do f $tag; done;"

[commit]
	gpgsign = true

[core]
	excludesfile = ~/.gitignore_global
